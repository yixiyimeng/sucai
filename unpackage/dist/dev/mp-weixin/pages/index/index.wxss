swiper {
  height: 390rpx;
}
swiper .tip {
    font-size: 50rpx;
    color: #fff;
    position: absolute;
    top: 50%;
    -webkit-transform: translate(0, -50%);
        -ms-transform: translate(0, -50%);
            transform: translate(0, -50%);
    font-weight: bold;
    z-index: 999;
    text-align: center;
    text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.5);
    left: 10rpx;
    right: 10rpx;
}
.searchbar {
  margin: 0 40rpx;
  border-radius: 8rpx;
  background: #fff;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
  font-size: 30rpx;
  line-height: 80rpx;
  padding: 0 10rpx;
  -webkit-box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.1);
          box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.1);
  height: 80rpx;
}
.searchbar image {
    width: 50rpx;
    margin-right: 20rpx;
}
.more {
  text-align: center;
  padding: 10rpx;
  color: #999;
}
.cu-tag {
  padding: 0 20rpx;
  font-size: 30rpx;
}
.goodslist .goods-item {
  width: 48%;
  margin: 0 0 20rpx;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  -webkit-box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.05);
          box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.05);
  border-radius: 4rpx;
  overflow: hidden;
  text-align: center;
}
.goodslist .goods-item image {
    display: block;
    width: 100%;
    height: 48vw;
}
.goodslist .goods-item ._p {
    height: 80rpx;
    line-height: 80rpx;
}

