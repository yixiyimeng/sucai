.userinfo {
  position: relative;
  overflow: hidden;
}
.userinfo > image {
    width: 100%;
    position: absolute;
    z-index: -1;
}
.userinfo > ._div {
    position: relative;
    top: 0;
    z-index: 9999;
    padding: 40rpx 30rpx;
    color: #fff;
}
.userinfo .vip {
    width: 28rpx;
}
.userinfo .imgbox {
    width: 120rpx;
    height: 120rpx;
    border-radius: 100%;
    overflow: hidden;
    background: #fff;
    border: 2px solid #fff;
    margin-right: 20rpx;
}
.userinfo .name {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
}
.menu .icon {
  font-size: 40rpx;
}

