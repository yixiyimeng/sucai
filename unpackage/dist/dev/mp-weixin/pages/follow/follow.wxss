.pageview > .flex-sub {
  height: 200rpx;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.subtip {
  text-align: right;
  color: #666;
  padding: 30rpx 20rpx 10rpx;
}
.list {
  padding-top: 20rpx;
}
.list .follow-item {
    padding: 30rpx;
    background: #fff;
    border-bottom: 1px solid #eee;
    color: #999;
    font-size: 24rpx;
}
.list .follow-item .name {
      color: #333;
      font-size: 28rpx;
      margin-bottom: 20rpx;
}
.tip {
  text-align: center;
  color: #666;
  font-size: 20rpx;
  padding: 10rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  -webkit-box-shadow: 0 -10rpx 10rpx rgba(0, 0, 0, 0.05);
          box-shadow: 0 -10rpx 10rpx rgba(0, 0, 0, 0.05);
}
.add {
  position: fixed;
  bottom: 200rpx;
  right: 20rpx;
  background: #FF6A00;
  color: #fff;
  text-align: center;
  height: 100rpx;
  width: 100rpx;
  border-radius: 100%;
}
.add > view {
    width: 100%;
}
.add text {
    font-size: 20rpx;
    font-size-adjust: none;
    display: block;
}
.add text:first-child {
      font-size: 46rpx;
      font-weight: bold;
      line-height: 30rpx;
}

